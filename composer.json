{
  "name": "iresults/avif",
  "license": "GPL-3.0",
  "description": "Creates AVIF copies for images (TYPO3 CMS)",
  "type": "typo3-cms-extension",
  "homepage": "https://www.iresults.li/",
  "authors": [
      {
          "name": "Andreas Thurnheer-Meier",
          "role": "Developer",
          "email": "tma@iresults.li"
      },
      {
          "name": "Daniel Corn",
          "role": "Developer",
          "email": "cod@iresults.li"
      }
  ],
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin",
    "sort-packages": true,
    "allow-plugins": {
      "typo3/cms-composer-installers": true,
      "typo3/class-alias-loader": true
    }
  },
  "require": {
    "php": ">=8.1",
    "typo3/cms-core": "^11.5 || ^12.4"
  },
  "autoload": {
    "psr-4": {
      "Iresults\\Avif\\": "Classes/"
    }
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "avif",
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.14"
  }
}
